{
  "name": "playground",
  "version": "0.1.0",
  "description": "",
  "engines": {
    "npm": ">=3"
  },
  "scripts": {
    "start": "babel-node tools/srcServer.js",
    "start:prod": "babel-node tools/distServer.js",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "lint:watch": "npm run lint -- --watch",
    "clean-dist": "npm run remove-dist && mkdir dist",
    "remove-dist": "rimraf ./dist",
    "prebuild": "npm run lint && npm run test && npm run clean-dist",
    "build": "babel-node tools/build.js && npm run start:prod",
    "test": "BABEL_ENV=test NODE_ENV=test jest --env=jsdom",
    "coverage": "npm run test -- --coverage ",
    "test:watch": "jest --watchAll",
    "open:cover": "npm run coverage && opn ./coverage/lcov-report/index.html",
    "analyze-bundle": "babel-node ./tools/analyzeBundle.js"
  },
  "author": "Kuhan Loh",
  "license": "MIT",
  "description": "Boilerplate with React/Redux/Thunk/Standard",
  "dependencies": {
    "connected-react-router": "4.4.1",
    "object-assign": "4.1.1",
    "react": "^16.6.0",
    "react-dom": "^16.0.0",
    "react-redux": "5.0.7",
    "react-router-dom": "4.3.1",
    "redux": "4.0.0",
    "redux-thunk": "2.3.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/node": "7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-react-constant-elements": "^7.0.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "7.1.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/runtime": "^7.1.2",
    "autoprefixer": "9.1.3",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "babel-plugin-dynamic-import-node": "^2.2.0",
    "babel-plugin-transform-react-remove-prop-types": "0.4.19",
    "browser-sync": "2.24.7",
    "chalk": "2.4.1",
    "connect-history-api-fallback": "1.5.0",
    "css-loader": "1.0.0",
    "cssnano": "4.1.0",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.6.0",
    "file-loader": "2.0.0",
    "hard-source-webpack-plugin": "0.12.0",
    "history": "4.7.2",
    "html-webpack-plugin": "3.2.0",
    "identity-obj-proxy": "3.0.0",
    "jest": "^23.5.0",
    "jest-cli": "^23.5.0",
    "jsdom": "13.0.0",
    "jsdom-global": "3.0.2",
    "json-loader": "0.5.7",
    "mini-css-extract-plugin": "0.4.2",
    "mockdate": "2.0.2",
    "node-sass": "4.9.3",
    "postcss-loader": "3.0.0",
    "prompt": "1.0.0",
    "prop-types": "15.6.2",
    "raf": "3.4.0",
    "react-hot-loader": "4.3.5",
    "react-test-renderer": "^16.6.0",
    "redux-immutable-state-invariant": "2.1.0",
    "redux-mock-store": "1.5.3",
    "regenerator-runtime": "0.12.1",
    "replace": "1.0.0",
    "rimraf": "2.6.2",
    "sass-loader": "7.1.0",
    "standard": "12.0.1",
    "style-loader": "0.23.0",
    "url-loader": "1.1.1",
    "webpack": "4.17.1",
    "webpack-bundle-analyzer": "2.13.1",
    "webpack-dev-middleware": "3.2.0",
    "webpack-hot-middleware": "2.22.3"
  },
  "keywords": [],
  "repository": {
    "type": "git",
    "url": "https://github.com/kuhanloh/react-playground"
  },
  "standard": {
    "globals": [
      "fetch"
    ],
    "env": "jest",
    "parser": "babel-eslint"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/tools/assetsTransformer.js",
      "\\.(css)$": "<rootDir>/tools/assetsTransformer.js"
    },
    "setupFiles": [
      "raf/polyfill",
      "./tools/enzymeTestAdapterSetup.js"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-syntax-dynamic-import",
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-object-rest-spread"
    ],
    "env": {
      "development": {
        "plugins": [
          "@babel/plugin-proposal-class-properties",
          "react-hot-loader/babel"
        ]
      },
      "production": {
        "presets": [
          [
            "@babel/preset-env",
            {
              "targets": {
                "ie": 9
              },
              "forceAllTransforms": true
            }
          ]
        ],
        "plugins": [
          "@babel/plugin-transform-react-constant-elements",
          "transform-react-remove-prop-types"
        ]
      },
      "test": {
        "plugins": [
          "dynamic-import-node"
        ]
      }
    }
  }
}
